<h2>Log-in</h2>
<form action="/auth/log-in" method="POST">





    <div class="card" style="width: 30rem;">
        <div class="card-header">
            <label for="username">Username</label>
            <input id="username" class="input-field" type="text" name='username' value="{{username}}"
                placeholder="Username" required>

        </div>

        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <label for="password1" class="label">Password</label>
                <input id="password1" class="input-field" type="password" name='pwd1' placeholder="Password" required>
            </li>
        </ul>
    </div>
    <hr>
    <input class="submit-btn btn btn-lg btn-warning edit" type="submit" value="LOG-IN">
    <br><br>
    <a href="/">back</a>
</form>
{{#if errorMessage}}
<div id="errorMessage">
    <p>{{errorMessage}}</p>
</div>
{{/if}}